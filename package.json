{
  "name": "infotition-next-boilerplate",
  "version": "1.2.2",
  "description": "Boilerplate for Next.js projects with typescript, scass, eslint, prettier and custom express server support.",
  "main": "dist/index.js",
  "types": "dist",
  "bin": {
    "infotition-next-boilerplate": "./dist/index.js"
  },
  "files": [
    "dist",
    "public",
    "README.md",
    "package.json",
    "LICENSE.md"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "tsc": "npm run clean&& tsc",
    "start": "npm run tsc&& cd dist&& node index.js",
    "build": "npm run tsc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Infotition/infotition-next-boilerplate.git"
  },
  "keywords": [
    "nextjs",
    "boilderplate",
    "express",
    "eslint",
    "prettier",
    "scass"
  ],
  "author": "Infotition",
  "license": "MIT",
  "dependencies": {
    "copyfiles": "^2.4.1"
  },
  "devDependencies": {
    "@types/copyfiles": "^2.4.0",
    "@types/node": "^14.14.25",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "eslint": "^7.18.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.3.1",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "typescript": "^4.1.3"
  }
}
